@page
@model SaleWebApp.Pages.AdminPage.ProductManagement.DetailsModel

@{
    ViewData["Title"] = "Details";
}

@{
    var userRole = ViewContext.HttpContext.Session.GetString("UserRole");
}
@if (userRole == "Admin")
{
    <h1>Details</h1>

    <div>
        <h4>Product</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.CategoryId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.CategoryId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.ProductName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.ProductName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Weight)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Weight)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.UnitPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.UnitPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.UnitsInStock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.UnitsInStock)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Product?.ProductId">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
}
else
{
    <h1>Access Denied</h1>
    <p>You do not have permission to access this page.</p>
    <form method="post" asp-page="/Login" asp-page-handler="Logout">
        <button type="submit" class="nav-link btn btn-link text-dark">Back to Login</button>
    </form>
}