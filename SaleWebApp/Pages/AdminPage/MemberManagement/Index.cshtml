@page
@model SaleWebApp.Pages.AdminPage.MemberManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}
@{
    var userRole = ViewContext.HttpContext.Session.GetString("UserRole");
}
@if(userRole == "Admin")
{
<h1>Member</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].MemberId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Member) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MemberId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MemberId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MemberId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MemberId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}
else
{
    <h1>Access Denied</h1>
    <p>You do not have permission to access this page.</p>
    <form method="post" asp-page="/Login" asp-page-handler="Logout">
        <button type="submit" class="nav-link btn btn-link text-dark">Back to Login</button>
    </form>
}